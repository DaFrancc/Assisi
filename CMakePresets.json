{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ASSISI_WARNINGS_AS_ERRORS": "OFF",
        "ASSISI_ENABLE_FAST_MATH": "ON",
        "ASSISI_ENABLE_SANITIZERS": "OFF",
        "ASSISI_SANITIZER_SET": "address;undefined"
      }
    },

    {
      "name": "msvc-debug",
      "inherits": "base",
      "description": "Windows + MSVC + Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/msvc-debug/conan_toolchain.cmake"
      }
    },
    {
      "name": "msvc-release",
      "inherits": "base",
      "description": "Windows + MSVC + Release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/msvc-release/conan_toolchain.cmake"
      }
    },
    {
      "name": "msvc-sanitize",
      "inherits": "base",
      "description": "Windows + MSVC + Sanitized (best-effort ASan; Linux is the primary sanitizer platform)",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ASSISI_ENABLE_SANITIZERS": "ON",
        "ASSISI_SANITIZER_SET": "address",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/msvc-sanitize/conan_toolchain.cmake"
      }
    },

    {
      "name": "gcc-debug",
      "inherits": "base",
      "description": "Linux + GCC + Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/gcc-debug/conan_toolchain.cmake"
      }
    },
    {
      "name": "gcc-release",
      "inherits": "base",
      "description": "Linux + GCC + Release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/gcc-release/conan_toolchain.cmake"
      }
    },
    {
      "name": "gcc-sanitize",
      "inherits": "base",
      "description": "Linux + GCC + Sanitized (ASan+UBSan default)",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "ASSISI_ENABLE_SANITIZERS": "ON",
        "ASSISI_SANITIZER_SET": "address;undefined",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/gcc-sanitize/conan_toolchain.cmake"
      }
    },

    {
      "name": "clang-debug",
      "inherits": "base",
      "description": "Linux + Clang + Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/clang-debug/conan_toolchain.cmake"
      }
    },
    {
      "name": "clang-release",
      "inherits": "base",
      "description": "Linux + Clang + Release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/clang-release/conan_toolchain.cmake"
      }
    },
    {
      "name": "clang-sanitize",
      "inherits": "base",
      "description": "Linux + Clang + Sanitized (ASan+UBSan default)",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "ASSISI_ENABLE_SANITIZERS": "ON",
        "ASSISI_SANITIZER_SET": "address;undefined",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/out/build/clang-sanitize/conan_toolchain.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "msvc-sanitize",
      "configurePreset": "msvc-sanitize"
    },

    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug"
    },
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release"
    },
    {
      "name": "gcc-sanitize",
      "configurePreset": "gcc-sanitize"
    },

    {
      "name": "clang-debug",
      "configurePreset": "clang-debug"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release"
    },
    {
      "name": "clang-sanitize",
      "configurePreset": "clang-sanitize"
    }
  ]
}
